    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeVersion": "16.14.0",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "runtimeVersion": "16.14.0",
            "request": "launch",
            "name": "Launch demo client",
            "cwd": "${workspaceFolder}/demo-client",
            "program": "${workspaceFolder}/demo-client/index.js",
            "env": {
            },
            "outFiles": [
              "${workspaceFolder}/demo-client/dist/**/*.js"
            ],
            "preLaunchTask": "Build demo-client",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}